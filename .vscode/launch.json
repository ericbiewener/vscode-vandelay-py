// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "PY - Single Root Workspace Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/py",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "PY - Multi Root Workspace Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/../test-workspaces/py-multi-root.code-workspace",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
        {
            "name": "Tests - Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "single-root"
            },
            "args": [
                "${workspaceFolder}/test/single-root",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
        {
            "name": "Tests - UPDATE SNAPSHOTS - Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "TEST_PROJECT": "single-root",
                "UPDATE_SNAPSHOT": "true"
            },
            "args": [
                "${workspaceFolder}/test/single-root",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
        {
            "name": "Tests - FULL - Single Root",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "FULL_INSERT_TEST": "true",
            },
            "args": [
                "${workspaceFolder}/test/single-root",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/test"
            ]
        },
    ]
}
